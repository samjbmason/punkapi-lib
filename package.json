{
  "name": "punkapi-lib",
  "version": "2.2.2",
  "description": "A javascript library for interacting with the punkapi-db",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=4.0.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "babel src -d dist",
    "dev": "babel src -d dist -w",
    "test": "npm run build & standard --verbose | snazzy && mocha",
    "cover": "istanbul cover _mocha",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samjbmason/punkapi-lib.git"
  },
  "keywords": [
    "punkapi",
    "beer",
    "craft beer",
    "api"
  ],
  "author": "Sam Mason <sam.jbmason@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samjbmason/punkapi-lib/issues"
  },
  "homepage": "https://github.com/samjbmason/punkapi-lib#readme",
  "dependencies": {
    "lodash": "^4.17.2",
    "moment": "^2.17.1",
    "punkapi-db": "^2.2.2",
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "coveralls": "^2.11.15",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.2.0",
    "should": "^11.1.1",
    "snazzy": "^5.0.0",
    "standard": "^8.6.0"
  },
  "standard": {
    "ignore": [
      "test/**/*"
    ]
  }
}
